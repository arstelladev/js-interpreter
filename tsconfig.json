{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2020",
    "module": "commonjs",
    "outDir": "out",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
